{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es6",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false
  },
  "exclude": ["node_modules"]
}
